<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:columnCount="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rowCount="2">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="cymball"
            android:scaleType="fitCenter"
            app:layout_column="1"
            app:layout_gravity="fill"
            app:layout_row="0"
            tools:srcCompat="@drawable/cymbal1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="tom1"
            android:scaleType="fitCenter"
            app:layout_column="2"
            app:layout_gravity="fill"
            app:layout_row="0"
            tools:srcCompat="@drawable/tom1" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="tom2"
            app:layout_column="3"
            app:layout_gravity="fill"
            app:layout_row="0"
            tools:srcCompat="@drawable/tom2" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="cymbal2"
            android:scaleType="fitCenter"
            app:layout_column="4"
            app:layout_gravity="fill"
            app:layout_row="0"
            tools:srcCompat="@drawable/cymbal2" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="hihat"
            android:scaleType="fitCenter"
            app:layout_column="0"
            app:layout_gravity="fill"
            app:layout_row="1"
            tools:srcCompat="@drawable/hihat" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="snare"
            android:scaleType="fitCenter"
            app:layout_column="1"
            app:layout_gravity="fill"
            app:layout_row="1"
            tools:srcCompat="@drawable/snare" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="Bass"
            android:scaleType="fitCenter"
            app:layout_column="2"
            app:layout_columnSpan="2"
            app:layout_gravity="fill"
            app:layout_row="1"
            tools:srcCompat="@drawable/bass" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="tom3"
            android:scaleType="fitCenter"
            app:layout_column="4"
            app:layout_gravity="fill"
            app:layout_row="1"
            tools:srcCompat="@drawable/tom3" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="cymbal3"
            android:scaleType="fitCenter"
            app:layout_column="5"
            app:layout_gravity="fill"
            app:layout_row="1"
            tools:srcCompat="@drawable/cymbal3" />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>